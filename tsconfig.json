{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,

        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./lib/components/*"],
            "@components": ["./lib/components/index.ts"],
            "@styles/*": ["./lib/styles/*"],
            "@styles": ["./lib/styles/index.ts"],
            "@utils/*": ["./lib/utils/*"],
            "@utils": ["./lib/utils/index.ts"],
            "@config/*": ["./lib/config/*"],
            "@config": ["./lib/config/index.ts"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.stories.*", "./tests/**/*.test.*", "./.storybook/**/*"],
    "exclude": ["node_modules", "build", "dist", "coverage", "storybook-static", "./src/lib/config/**/*"]
}
